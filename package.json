{
	"name":				"blud",
	"version":			"1.0.0",
	"description":		"A tiny game",
	"main":				"app.js",
	"scripts":{
		"start":		"electron .",

		"package-mac":	"electron-packager . --overwrite --platform=darwin\t\t\t\t--arch=x64  --prune=true --out=release-builds",
		"package-win":	"electron-packager . --overwrite --asar=true --platform=win32\t--arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=Smogheap --version-string.FileDescription=\"A tiny game\" --version-string.ProductName=\"Blud\"",
		"package-linux":"electron-packager . --overwrite --platform=linux\t\t\t\t--arch=x64  --prune=true --out=release-builds"
	},
	"repository":{
		"type":			"git",
		"url":			"git+https://github.com/smogheap/blud.git"
	},
	"keywords":[
	],
	"author":			"Micah N Gorrell",
	"devDependencies":{
		"electron":		"^1.3.4"
	}
}

